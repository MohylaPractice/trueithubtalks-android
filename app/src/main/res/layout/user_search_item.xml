<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardUserSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewUserSearchPicture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/image_description_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_account_circle" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewUserSearchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:theme="@style/TitleText"
        app:layout_constraintBottom_toBottomOf="@+id/cardUserSearch"
        app:layout_constraintStart_toEndOf="@+id/cardUserSearch"
        app:layout_constraintTop_toTopOf="@+id/cardUserSearch"
        tools:text="John Doe" />
</androidx.constraintlayout.widget.ConstraintLayout>